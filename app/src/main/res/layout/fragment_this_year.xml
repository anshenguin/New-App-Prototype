<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:scrollbars="none"
    android:focusable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/empty_view"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/empty_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/emptylistview_one"/>

                <TextView
                    android:id="@+id/empty_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/empty_image"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="16dp"
                    android:text="No entries exist for this year!"
                    android:textAppearance="?android:textAppearanceMedium"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#E0E0E0"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THIS YEAR"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/regular_oxygen"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"/>

                    <com.kinitoapps.moneymanager.piechart.PieGraph
                        android:id="@+id/graph"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="13">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="RECEIVED"
                                android:fontFamily="@font/bold_oxygen" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/sum_received"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:text="100000000"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeTextType="uniform"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="16sp"
                                android:gravity="center_horizontal"
                                android:textColor="#43C443"
                                android:fontFamily="@font/bold_oxygen"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="NET TOTAL"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/bold_oxygen"/>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/total"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:text="100000000"
                                app:autoSizeTextType="uniform"
                                android:autoSizeTextType="uniform"
                                android:textColor="#F9A825"
                                android:layout_marginBottom="8dp"
                                android:textSize="24sp"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/bold_oxygen"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="SPENT"
                                android:fontFamily="@font/bold_oxygen"/>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/sum_spent"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:text="10000"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeTextType="uniform"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="16sp"
                                android:gravity="center_horizontal"
                                android:textColor="#F55454"
                                android:fontFamily="@font/bold_oxygen"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <com.kinitoapps.moneymanager.NonScrollListView
                    android:id="@+id/list"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA" />
            </LinearLayout>

